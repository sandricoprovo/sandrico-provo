{
    "compilerOptions": {
        "target": "es2016",
        "jsx": "preserve",
        "module": "commonjs",
        "moduleResolution": "node",
        "allowJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "noEmit": true,
        "incremental": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "types": [
            "jest",
            "node"
        ],
    },
    "include": [
        "./next-env.d.ts",
        "./src/**/*",
        "./pages/**/*",
    ],
    "exclude": [
        "node_modules",
        "cypress/**/*",
        "./cypress.config.ts",
    ]
}